<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dark theme as primary (matches the hardcoded dark layout colors) -->
    <style name="Theme.AppKiller" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1F1F1F</item>
        <item name="android:statusBarColor">#121212</item>
        <item name="android:navigationBarColor">#121212</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Transparent overlay theme for KillingProgressActivity -->
    <!-- FIX: Removed windowIsFloating which crashes on Samsung Android 15 -->
    <style name="Theme.Transparent" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
